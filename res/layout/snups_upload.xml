<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bg">
      
	  <ImageView 
	  		android:layout_y="70px" 
	  		android:layout_height="195px" 
	  		android:id="@+id/SnupsImage" 
	  		android:layout_x="30px" 
	  		android:layout_width="260px"/>
      <Button
            android:id="@+id/btn_newImage"
            android:layout_height="wrap_content"
            android:text="Take new Image" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="380px"
			android:onClick="takeNewImage"/>
	  <Button
            android:id="@+id/btn_upload"
            android:layout_height="wrap_content"
            android:text="Upload this Image" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="310px"
			android:onClick="uploadImage"/>
</AbsoluteLayout>