<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bgml">

      <Button
            android:id="@+id/btn_new_mission"
            android:layout_height="wrap_content"
            android:text="Show Tutorial" 
            android:layout_width="200px" 
            android:layout_x="65px" 
            android:layout_y="220px" 
            android:onClick="showTutorial"/>
      <Button
            android:id="@+id/btn_play_mission"
            android:layout_height="wrap_content"
            android:text="Login" 
            android:layout_width="200px" 
            android:layout_x="65px" 
            android:layout_y="300px"
			android:onClick="showLogin"/>
</AbsoluteLayout>