<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bgml">

      <Button
            android:id="@+id/btn_play_mission"
            android:layout_height="wrap_content"
            android:text="Play Mission" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="220px"
            android:onClick="playMission"/>
	  <Button
            android:id="@+id/btn_view_photo_stream"
            android:layout_height="wrap_content"
            android:text="Latest Pictures" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="270px"
			android:onClick="viewLatestPictures"/>
	  <Button
            android:id="@+id/btn_view_photo_stream"
            android:layout_height="wrap_content"
            android:text="Own Pictures" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="320px"
			android:onClick="viewProfile"/>
	  <Button
            android:id="@+id/btn_view_photo_stream"
            android:layout_height="wrap_content"
            android:text="My Favorites" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="370px"
			android:onClick="viewFavorites"/>
	  <Button
            android:id="@+id/btn_new_mission"
            android:layout_height="wrap_content"
            android:text="New Mission" 
            android:layout_width="200px" 
            android:layout_x="60px" 
            android:layout_y="420px"
			android:onClick="newMission"/>

</AbsoluteLayout>